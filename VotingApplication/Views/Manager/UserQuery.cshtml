@model UserQueryViewModel
@{
    ViewData["Purpose"] = "User Search";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="AddSecurityQuestionsAsync" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" autocomplete="off">
    <!-- Quesions From: http://stumbleforward.com/2012/08/20/the-10-most-common-password-security-questions/ -->
    <h2 class="form-signin-heading">User Query</h2>
    <div class="form-group">
        <label asp-for="Option"></label>
        <select asp-for="Option" class="form-control">
            <option disabled selected>Select a query type.</option>
            <option>First Name</option>
            <option>Last Name</option>
            <option>Party</option>
            <option>username</option>
            <option>email</option>
        </select>
        <span asp-validation-for="Option" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Confirm</button>
</form>


