@model UserSearchViewModel
@{
    // move this code into the C# class so it is easier to edit
    ViewData["Purpose"] = "Search Users";
    ViewData["Submit"] = "Search";
}

<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <h2 id="PageTag" class="form-signin-heading">@ViewData["Purpose"]</h2>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" placeholder="Filter by First Name" />
        <span asp-validation-for="FirstName" class="text-danger" id="id"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" placeholder="Filter by Last Name" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" placeholder="Filter by Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Filter by Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Identification"></label>
        <input asp-for="Identification" class="form-control" placeholder="Filter by Identification" />
        <span asp-validation-for="Identification" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SSNumber"></label>
        <input asp-for="SSNumber" class="form-control" placeholder="Filter by Social Security Number" />
        <span asp-validation-for="SSNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressLineOne"></label>
        <input asp-for="AddressLineOne" class="form-control" placeholder="Filter by Address Line One" />
        <span asp-validation-for="AddressLineOne" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressLineTwo"></label>
        <input asp-for="AddressLineTwo" class="form-control" placeholder="Filter by Address Line Two" />
        <span asp-validation-for="AddressLineTwo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" placeholder="Filter by City" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State"></label>
        <input asp-for="State" onkeydown ="upperCaseF(this)"class="form-control" placeholder="Filter by State" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZipCode"></label>
        <input asp-for="ZipCode" class="form-control" placeholder="Filter byZip Code" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DOB"></label>
        <input asp-for="DOB" class="form-control" placeholder="Filter by date of birth" />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Party"></label>
        <select asp-for="Party" class="form-control">
            <option disabled selected>Filter by party</option>
            <option>Democrat</option>
            <option>Republican</option>
            <option>Independent</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Party" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ethnicity"></label>
        <select asp-for="Ethnicity" class="form-control">
            <option disabled selected>Filter by ethnicity</option>
            <option>White</option>
            <option>Hispanic, Latino, or Spanish</option>
            <option>Black or African American</option>
            <option>Asian</option>
            <option>Middle Eastern or North African</option>
            <option>Native Hawaiian or other Pacific Islander</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="Ethnicity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sex"></label>
        <select asp-for="Sex" class="form-control">
            <option disabled selected>Filter by sex</option>
            <option>Male</option>
            <option>Female</option>
        </select>
        <span asp-validation-for="Sex" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IncomeRange"></label>
        <select asp-for="IncomeRange" class="form-control">
            <option disabled selected>Filter by income range</option>
            <option>Less than $25,000 a year</option>
            <option>$25,000 to $49,999 a year</option>
            <option>$50,000 to $74,999 a year</option>
            <option>$75,000 to $99,999 a year</option>
            <option>$100,000 to $125,000 a year</option>
            <option>Above $125,000 a year</option>
        </select>
        <span asp-validation-for="IncomeRange" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VoterReadiness"></label>
        <select asp-for="VoterReadiness" class="form-control">
            <option disabled selected>Filter by readiness level</option>
            <option>Not at all prepared</option>
            <option>Started doing research</option>
            <option>I have researched most of the canidates</option>
            <option>I have researched every canidates</option>
            <option>My friends consider me an expert</option>
        </select>
        <span asp-validation-for="VoterReadiness" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" id="submitbutton">@ViewData["Submit"]</button>
</form>

<script>
    function upperCaseF(a) {
        setTimeout(function () {
            a.value = a.value.toUpperCase();
        }, 1);
    }
</script>