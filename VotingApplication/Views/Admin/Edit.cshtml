@model ManageUserViewModel
@{
    //this function will be used to edit user account info

    // move this code into the C# class so it is easier to edit
    ViewData["Purpose"] = "Edit User";
    ViewData["Submit"] = "Submit";
}

<script>
    $.validator.setDefaults({
        onkeyup: false
    })
</script>

<form method="post">
    <h2 class="form-signin-heading">@ViewData["Purpose"]</h2>
    <input asp-for="PrevUsername" type="hidden" />
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" placeholder="Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmailConfirmed"></label>
        <input asp-for="EmailConfirmed" class="form-control" placeholder="Email Confirmed" />
        <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@ViewData["Submit"]</button>
</form>