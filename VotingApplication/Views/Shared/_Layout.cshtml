@using VotingApplication.Controllers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="~/style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
</head>
    <body>
        <nav class="navbar navbar-toggleable-md navbar-expand-md navbar-dark bg-dark">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Voting Online</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @if (ViewContext.RouteData.Values["controller"].ToString() == "Home")
                        {
                        <a asp-area="" asp-controller="@nameof(HomeController).RemoveController()" asp-action="@nameof(HomeController.Index)" class="nav-link active" style="background-color: #111;">Home</a>
                        }
                        else
                        {
                        <a asp-area="" asp-controller="@nameof(HomeController).RemoveController()" asp-action="@nameof(HomeController.Index)" class="nav-link" >Home</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (ViewContext.RouteData.Values["controller"].ToString() == "About")
                        {
                        <a asp-area="" asp-controller="@nameof(AboutController).RemoveController()" asp-action="@nameof(AboutController.Index)" class="nav-link active" style="background-color: #111;">About</a>
                        }
                        else
                        {
                        <a asp-area="" asp-controller="@nameof(AboutController).RemoveController()" asp-action="@nameof(AboutController.Index)" class="nav-link">About</a>
                        }
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item">
                        @if (User.IsInRole("Administrator"))
                        {
                            @if (ViewContext.RouteData.Values["action"].ToString() == "Dashboard")
                            {
                                <a asp-area="" asp-controller="@nameof(AdminController).RemoveController()" asp-action="@nameof(AdminController.Dashboard)" class="nav-link active" style="background-color: #111;">Dashboard</a>
                            }
                            else
                            {
                                <a asp-area="" asp-controller="@nameof(AdminController).RemoveController()" asp-action="@nameof(AdminController.Dashboard)" class="nav-link">Dashboard</a>
                            }
                        }
                        else if (User.IsInRole("GenericUser"))
                        {
                            @if (ViewContext.RouteData.Values["action"].ToString() == "Dashboard")
                            {
                                <a asp-area="" asp-controller="@nameof(VoterRegistrationController).RemoveController()" asp-action="@nameof(VoterRegistrationController.Dashboard)" class="nav-link active" style="background-color: #111;">Dashboard</a>
                            }
                            else
                            {
                                <a asp-area="" asp-controller="@nameof(VoterRegistrationController).RemoveController()" asp-action="@nameof(VoterRegistrationController.Dashboard)" class="nav-link">Dashboard</a>
                            }
                        }
                        else
                        {
                            @if (ViewContext.RouteData.Values["action"].ToString() == "Dashboard")
                            {
                                <a asp-area="" asp-controller="@nameof(VoterController).RemoveController()" asp-action="@nameof(VoterController.Dashboard)" class="nav-link active" style="background-color: #111;">Dashboard</a>
                            }
                            else
                            {
                                <a asp-area="" asp-controller="@nameof(VoterController).RemoveController()" asp-action="@nameof(VoterController.Dashboard)" class="nav-link">Dashboard</a>
                            }
                        }
                    </li>
                    <li class="nav-item">
                        @if (ViewContext.RouteData.Values["action"].ToString() == "Profile")
                        {
                        <a asp-area="" asp-controller="@nameof(UserController).RemoveController()" asp-action="@nameof(UserController.Profile)" class="nav-link active" style="background-color: #111;">Profile</a>
                        }
                        else
                        {
                        <a asp-area="" asp-controller="@nameof(UserController).RemoveController()" asp-action="@nameof(UserController.Profile)" class="nav-link">Profile</a>
                        }
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="@nameof(AuthenticationController).RemoveController()" asp-action="@nameof(AuthenticationController.Logout)" class="nav-link">Logout</a>
                    </li>
                    }
                    else
                    {
                    <li class="nav-item">
                        @if (ViewContext.RouteData.Values["controller"].ToString() == "Authentication")
                        {
                        <a asp-area="" asp-controller="@nameof(AuthenticationController).RemoveController()" asp-action="@nameof(AuthenticationController.Login)" class="nav-link active" style="background-color: #111;">Login</a>
                        }
                        else
                        {
                        <a asp-area="" asp-controller="@nameof(AuthenticationController).RemoveController()" asp-action="@nameof(AuthenticationController.Login)" class="nav-link">Login</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (ViewContext.RouteData.Values["controller"].ToString() == "UserRegistration")
                        {
                        <a asp-area="" asp-controller="@nameof(UserRegistrationController).RemoveController()" asp-action="@nameof(UserRegistrationController.Register)" class="nav-link active" style="background-color: #111;">Create Account</a>
                        }
                        else
                        {
                        <a asp-area="" asp-controller="@nameof(UserRegistrationController).RemoveController()" asp-action="@nameof(UserRegistrationController.Register)" class="nav-link">Create Account</a>
                        }
                    </li>
                    }
                </ul>
            </div>
        </nav>
        <div class="container">
            @RenderBody()
        </div>
    </body>
</html>