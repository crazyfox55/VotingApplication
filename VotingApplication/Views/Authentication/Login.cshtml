@using VotingApplication.Controllers;
@model LoginViewModel

<script>
    $.validator.setDefaults({
        onkeyup: false
    })
</script>

<form asp-action="@nameof(AuthenticationController.LoginAsync)" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <h2 class="form-signin-heading">@ViewData["Purpose"]</h2>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" placeholder="Enter Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" placeholder="Enter Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button id ="Login" type="submit" class="btn btn-primary">@ViewData["Submit"]</button>
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
</form>
<a asp-area="" asp-controller="@nameof(UserRegistrationController).RemoveController()" asp-action="@nameof(UserRegistrationController.Register)" >New User?</a><br />
<a asp-area="" asp-controller="@nameof(AuthenticationController).RemoveController()" asp-action="@nameof(AuthenticationController.RequestResetPasswordEmail)" >Forgot Password?</a><br />
<a asp-area="" asp-controller="@nameof(UserRegistrationController).RemoveController()" asp-action="@nameof(UserRegistrationController.RequestEmailConfirmation)" >Resend Email Confirmation?</a><br />
